
<script src="/Javascript/jQuery/jquery-1.8.1.min.js" type="text/javascript"></script>  
<script type="text/javascript" src="/Javascript/bootstrap/2.2.2/bootstrap.min.js"></script>
<link   href="/Javascript/bootstrap/datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" type="text/css" />        
<script src="/Javascript/bootstrap/datetimepicker/bootstrap-datetimepicker.min.js" type="text/javascript"></script> 
<script type="text/javascript">

    $(document).ready(function () {
       
        $("txtKeyLenght").val("30");
        $('#txtUsername').focus();
    });

    function GetSSOToken() {
        var keyLenght = $('#txtKeyLenght').val();
        var username = $('#txtUsername').val();
        if (username==""|| keyLenght.length=="")
            return;
        var url = '/rest/tbot/SSO?KeySize='+keyLenght+'&username=' + username;
        $.ajaxSetup({ cache: false });
        $.getJSON(url, function (data) {
            $('#txtSSOKey').val(data[0].Value);
            $('#txtSSOToken').val(data[1].Value);
            
        });
    }
</script>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
   <head></head>
    <body>
        <h4>Generating a new SSO Token</h4>
        <br/>
        <form name="myForm" class="css-form" ng-submit="update(userData)">    
        <ul>
            <p>        
                
            </p>
            <div class="input-prepend">
                <span class="add-on" style="width:120px;" m>UserName</span>
                <input type="text" style="width:250px;" required ng-disabled="false" name="txtUsername" id="txtUsername"/>
            </div><br/>
            <div class="input-prepend">
                <span class="add-on" style="width:120px;">Key lenght</span>
                <input type="number" id="txtKeyLenght" name="txtKeyLenght" style="width:50px;" required value="30"/>
            </div>
			    <span style="color:red;font-weight:bold" ng-show="myForm.txtKeyLenght.$error.required">This field is required!</span>
			<br/>        
            <div class="input-prepend">
                <span class="add-on" style="width:120px;">SSO Key</span>
                <input type="text" style="width:310px;" id="txtSSOKey" readonly="readonly"  />
            </div><br/>
            <div class="input-prepend">
                <span class="add-on" style="width:120px;">SSO Token</span>
                <input type="text" style="width:255px;" id="txtSSOToken" readonly="readonly"/>
            </div><br/>
            
            <br />
              
            <button class="btn btn-primary" ng-disabled="myForm.$invalid" onclick="GetSSOToken();" >Generate SSO Token</button>  
        </ul>    

    </form>

    </body>
</html>